{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types" // Ensure this is correct
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts" // This should include your types
  ]
}